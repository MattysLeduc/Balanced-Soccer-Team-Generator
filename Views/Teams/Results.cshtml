@model List<Balanced_Soccer_Team_Generator.ViewModels.TeamResultVM>

@{
    ViewData["Title"] = "Teams Result";
    int teamIndex = 1;
}

<h1>Generated Teams</h1>

<div class="row">
    @foreach (var team in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="team-card team-@teamIndex">
                <div class="team-title">@team.TeamName</div>
                <div class="team-total">Total Score: @team.TotalScore</div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Player</th>
                            <th>Overall</th>
                            <th>Rank</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in team.Players)
                        {
                            <tr>
                                <td>@p.Name</td>
                                <td>@p.OverallScore</td>
                                <td>@p.Rank</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        teamIndex++;
    }
</div>
